<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6 text-center">All Books</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% @books.each do |book| %>
      <%= link_to book_path(book), class: "block p-4 bg-white shadow rounded hover:bg-gray-100 transition" do %>
        <p><strong>Title:</strong> <%= book.title %></p>
        <p><strong>Author:</strong> <%= book.author %></p>
      <% end %>
    <% end %>
  </div>
</div>
